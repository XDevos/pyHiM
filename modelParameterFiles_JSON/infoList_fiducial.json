{
    "acquisition": {
        "DAPI_channel": "ch00",
        "RNA_channel": "ch01",
        "fileNameRegExp": "scan_(?P<runNumber>[0-9]+)_(?P<cycle>[\\w|-]+)_(?P<roi>[0-9]+)_ROI_converted_decon_(?P<channel>[\\w|-]+).tif",
        "barcode_channel": "ch01",
        "fiducialBarcode_channel": "ch00",
        "fiducialDAPI_channel": "ch02",
        "label": "fiducial",
        "pixelSizeXY": 0.1,
        "pixelSizeZ": 0.25,        
        "zBinning":2,
        "parallelizePlanes": false,        
        "positionROIinformation": 3
    },
    "alignImages": {
        "folder": "alignImages",
        "operation": "overwrite",
		"localAlignment": "block3D",
		"localShiftTolerance": 1,
        "bezel": 20,               
        "outputFile": "alignImages.bed",
        "background_sigma": 3.0,        
        "referenceFiducial": "RT27",
        "alignByBlock": true,
        "higher_threshold": 0.9999999,
        "lower_threshold": 0.999,
        "tolerance": 0.1
    },
    "zProject": {
        "display": true,
        "folder": "zProject",
        "mode": "full",
        "blockSize": 128,
        "operation": "skip",
        "saveImage": true,
        "windowSecurity": 2,
        "zProjectOption": "MIP",
        "zmax": 59,
        "zmin": 1,
        "zwindows": 10
    }
}
