{
    "acquisition": {
        "label": "RNA",
        "fileNameRegExp": "scan_(?P<runNumber>[0-9]+)_(?P<cycle>[\\w|-]+)_(?P<roi>[0-9]+)_ROI_converted_decon_(?P<channel>[\\w|-]+).tif",
        "pixelSizeXY": 0.1,
        "pixelSizeZ": 0.25,        
        "positionROIinformation": 3
    },
    "alignImages": {
        "folder": "alignImages",
        "operation": "overwrite",
        "outputFile": "alignImages",
        "alignByBlock": true,
        "tolerance": 0.1,
     	"localAlignment": "overwrite",
        "lower_threshold": 0.999, 
        "higher_threshold": 0.9999999, 
		"localShiftTolerance": 3,
        "bezel": 20,               
        "referenceFiducial": "RT27"
    },
    "projectsBarcodes": {
        "folder": "projectsBarcodes",
        "operation": "overwrite",
        "outputFile": "projectsBarcodes"
    },
    "segmentedObjects": {
        "area_max": 1000,
        "area_min": 200,
        "background_method": "inhomogeneous",
        "background_sigma": 3.0,
        "folder": "segmentedObjects",
        "fwhm": 3.0,
        "brightest": 1100, 
        "intensity_max": 59,
        "intensity_min": 0,
        "operation": "overwrite",
        "outputFile": "segmentedObjects",
        "threshold_over_std": 1.0,
        "toleranceDrift":1
    },
    "zProject": {
        "display": true,
        "folder": "zProject",
        "mode": "full",
        "operation": "skip",
        "saveImage": true,
        "windowSecurity": 2,
        "zProjectOption": "sum",
        "zmax": 59,
        "zmin": 1,
        "zwindows": 10
    }
}
